<h3>Update Patient Info: </h3>


<form action="/users/<%= patient._id %>?_method=PUT"  method="POST" name="addPatientForm">
<label>Full Name: </label>
  <input name="name" type="text" value= "<%= patient.name %>"required> <br> <br>

  <label> Date of Birth: </label>
  <input name="birthdate" type="date" value="<%= patient.birthdate.toLocaleDateString()%>" required> <br> <br>

  <label>Age: </label>
  <input name="ageYear" type="number" min="0" max="18" value="<%= patient.ageYear %>" required>years
  <input name="ageMonth" type="number" min="0" max="12" value="<%= patient.ageMonth %>" required>months<br> <br>


  <label> Allergies: </label>
  <input name="allergies" type="text" value="<%= patient.allergies %>" required><br> <br>

  <label> Diagnoses: </label>
  <input name="diagnoses" type="text" value="<%= patient.diagnoses %>" required><br> <br>

  <label>Developmental History: </label>
  <textarea name="history" type="text" value="<%= patient.history %>" rows="4" cols="50"  required> </textarea><br> <br>

  <label>Feeding and Swallowing Concerns: </label>
  <textarea name="concerns" type="text" rows="4" cols="50" value="<%= patient.concerns %>" required> </textarea><br> <br>

  <button type="submit">update Patient</button>

</form>

