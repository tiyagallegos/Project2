


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>So Fly: Lux Flights in Style</title>
</head>
<body>
    <h1>Flight Index</h1>
    <table>
        <thead>
          <tr>
            <th>Airline</th>
            <th>Flight No</th>
            <th>Departure</th>
          </tr>    
        </thead>
        <tbody>
            <% flights.forEach(function (flight){ %>
                <tr>
                    <td><%= flight.airline %></td>
                    <td><%= flight.flightNo %></td>
                    <td><%= flight.departs.toLocaleString() %> </td>
                    <td><a  id="details-button" href="/flights/<%= flight._id %>">Details</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/flights/new">Add New Flight</a> <br><br>
  <a href="/">Return to Homepage</a>
</body>